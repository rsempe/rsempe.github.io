<!DOCTYPE html>
<html>
  <head>
    <title>Gites Les Celestins</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="hotel, gite, bed and breakfast, accommodations, vaucluse, provence, carpentras">
    <meta name="description" content="Les Celestins - Gîtes et Chambres d'Hôtes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="shortcut icon" href="assets/favicon.ico" type="image/x-icon">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Poppins:400,300,500,600,700" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="layer"></div>
    <!-- Mobile menu overlay mask -->

    <!--<div id="preloader">
    <div data-loader="circle-side"></div>
    </div>--><!-- End Preload -->

    <%= render "layouts/header" %>
    <%= yield %>
    <%= render "layouts/footer" %>

    <!-- COMMON SCRIPTS -->
    <script src="assets/jquery-1.11.2.min.js"></script>
    <script src="assets/common_scripts_min.js"></script>
    <script src="assets/validate.js"></script>
    <script src="assets/functions.js"></script>

    <!-- SPECIFIC SCRIPTS -->
    <script src="assets/greensock.js"></script>
    <script src="assets/layerslider.transitions.js"></script>
    <script src="assets/layerslider.kreaturamedia.jquery.js"></script>
    <script type="text/javascript">
      if ($('#layerslider').length > 0) {
        $('#layerslider').layerSlider({
          autoStart: true,
          responsive: true,
          responsiveUnder: 1280,
          layersContainer: 1170,
          navButtons:false,
          showCircleTimer:true,
          navStartStop:false,
          skinsPath: 'assets/layerslider/'
        });
      }
    </script>
  </body>
</html>
