<section class="hero" style="background-image: url('<%= asset_path('bnbs/piscine.jpg') %>');">
  <div class="hero-content">
    <h3><strong><%= t("bnbs.title") %></strong> (<%= t("bnbs.two_people") %>)</h3>
  </div>
</section>

<div class="container margin_60_35">
  <h1 class="main_title">
    <em></em>
    <%= t("bnbs.independent_studios") %>
    <span><%= t("bnbs.bnbs_in_carpentras") %></span>
  </h1>
  <p class="lead styled">
    <%= t("bnbs.description.first") %><br><br>
    <%= t("bnbs.description.second") %><br><br>
    <%= t("bnbs.description.third") %>
  </p>
</div>

<div class="container_styled_1">
  <div class="container margin_60">
    <div class="row">
      <div class="col-md-5 col-md-offset-1">
        <figure class="room_pic">
          <div class="swiper studio-swiper" id="cabanon-swiper">
            <div class="swiper-wrapper">
              <%
                cabanon_images = %w[chambre-1 chambre-2 chambre-3 chambre-4 cuisine-1 cuisine-2 cuisine-3 dejeuner terrasse-1 terrasse-2 jardin piscine-1 piscine-2]
              %>
              <% cabanon_images.each do |img| %>
                <div class="swiper-slide">
                  <a href="<%= asset_path("bnbs/cabanon/gallery/1920x1280/#{img}.jpg") %>"
                     class="glightbox"
                     data-gallery="cabanon">
                    <%= image_tag("bnbs/cabanon/gallery/800x533/#{img}.jpg", class: "img-responsive", alt: t("seo.alt.cabanon")) %>
                  </a>
                </div>
              <% end %>
            </div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
          </div>
          <span class="wow zoomIn">
            <i class="icon_set_1_icon-46"></i><br>
            <small><%= t("bnbs.cabanon.pool_view").capitalize %></small>
          </span>
        </figure>
      </div>
      <div class="col-md-4 col-md-offset-1">
        <div class="room_desc_home">
          <h3><%= t("common.studio_cabanon") %></h3>
          <p><%= t("bnbs.cabanon.description.first") %></p>
          <p><%= t("bnbs.cabanon.description.second") %></p>
          <p><%= t("bnbs.cabanon.description.third") %></p>

          <ul>
            <li>
              <div class="tooltip_styled tooltip-effect-4">
                <span class="tooltip-item"><i class="icon-snow"></i></span>
                <div class="tooltip-content">
                  <%= t("common.individual_air_conditioning") %>
                </div>
              </div>
            </li>
            <li>
              <div class="tooltip_styled tooltip-effect-4">
                <span class="tooltip-item"><i class="icon_set_2_icon-104"></i></span>
                <div class="tooltip-content">
                  <%= t("common.large_double_bed") %>
                </div>
              </div>
            </li>
            <li>
              <div class="tooltip_styled tooltip-effect-4">
                <span class="tooltip-item"><i class="icon_set_2_icon-118"></i></span>
                <div class="tooltip-content">
                  <%= t("villa.rooms.independant_bathroom") %>
                </div>
              </div>
            </li>
            <li>
              <div class="tooltip_styled tooltip-effect-4">
                <span class="tooltip-item"><i class="icon_set_2_icon-103"></i></span>
                <div class="tooltip-content">
                  <%= t("villa.rooms.wardrobe") %>
                </div>
              </div>
            </li>
            <li>
              <div class="tooltip_styled tooltip-effect-4">
                <span class="tooltip-item"><i class="icon_set_1_icon-86"></i></span>
                <div class="tooltip-content">
                  <%= t("villa.rooms.free_wifi") %>
                </div>
              </div>
            </li>
            <li>
              <div class="tooltip_styled tooltip-effect-4">
                <span class="tooltip-item"><i class="icon_set_1_icon-58"></i></span>
                <div class="tooltip-content">
                  <%= t("bnbs.free_breakfast") %>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

