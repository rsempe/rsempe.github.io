<section class="hero" style="background-image: url('<%= asset_path('villa/villa-1.jpg') %>');">
  <div class="hero-content">
    <h3><strong><%= t("villa.title") %></strong> (<%= t("villa.six_people") %>)</h3>
  </div>
</section>

<div class="container margin_60_35">
  <h1 class="main_title">
    <em></em>
    <%= t("common.the_villa") %> <span><%= t("villa.subtitle") %></span>
  </h1>
  <p class="lead styled">
    <%= t("villa.description.first") %><br>
    <%= t("villa.description.second") %><br><br>
    <%= t("villa.description.third") %><br><br>
    <%= t("villa.description.fourth") %>
  </p>
  <div class="row">
    <div class="col-sm-6">
      <div class="mosaic_container">
        <%= image_tag("villa/mosaics/espace-detente.jpg", class: "img-responsive add_bottom_30", alt: t("seo.alt.villa_entertainment")) %>
        <span class="caption_2"><%= t("villa.entertainent_area") %></span>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="col-xs-12">
        <div class="mosaic_container">
          <%= image_tag("villa/mosaics/piscine.jpg", class: "img-responsive add_bottom_30", alt: t("seo.alt.villa_pool")) %>
          <span class="caption_2"><%= t("villa.swimming_pool") %></span>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="mosaic_container">
          <%= image_tag("villa/mosaics/petanque.jpg", class: "img-responsive add_bottom_30", alt: t("seo.alt.villa_boules")) %>
          <span class="caption_2"><%= t("villa.boules_court") %></span>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="mosaic_container">
          <%= image_tag("villa/mosaics/maison.jpg", class: "img-responsive add_bottom_30", alt: t("seo.alt.villa_patio")) %>
          <span class="caption_2"><%= t("villa.patio") %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<p class="lead styled">
  <%= t("villa.mosaics.first") %><br><br>
  <%= t("villa.mosaics.second") %><br><br>
  <%= t("villa.mosaics.third") %>
</p>

<%= render "villa/mosaics" %>

<div class="container margin_30">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h3><%= t("common.prices") %></h3>
      <table class="table table-striped">
        <tbody>
          <tr>
            <td><%= t("common.week_with_nights") %></td>
            <td>1930€ / <%= t("common.week") %></td>
          </tr>
          <tr>
            <td><%= t("common.weekend_with_nights") %></td>
            <td>750€ / <%= t("common.weekend") %></td>
          </tr>
          <tr>
            <td><%= t("common.additional_night") %></td>
            <td>290€ / <%= t("common.night") %></td>
          </tr>
        </tbody>
      </table>
      <p class="text-right">
        *<%= t("common.included_towels") %><br/>
        *<%= t("common.excluded_cleaning") %> 80€<br/>

        *<%= link_to t("common.tourist_tax"), "https://lacove.taxesejour.fr", target: "_blank" %> (<%= t("common.extra") %>)
      </p>
    </div>
  </div>
</div>

<%= render "villa/testimonials" %>

