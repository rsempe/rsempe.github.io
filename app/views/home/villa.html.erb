<div id="full-slider-wrapper">
  <div id="layerslider" style="width:100%;height:600px;">
    <div class="ls-slide" data-ls="slidedelay: 5000; transition2d:5;">
      <%= image_tag("villa/villa-1.jpg", class: "ls-bg", alt: "Slide background") %>
      <h3 class="ls-l slide_typo" style="top: 45%; left: 50%;" data-ls="offsetxin:0;durationin:2000;delayin:1000;easingin:easeOutElastic;rotatexin:90;transformoriginin:50% bottom 0;offsetxout:0;rotatexout:90;transformoriginout:50% bottom 0;" >
        <strong><%= t("villa.title") %></strong> (<%= t("villa.six_people") %>)
      </h3>
      <!--<a href="#0" class="btn_slider ls-l" style="top:62%; left:50%;" data-ls="durationin:2000;delayin:1300;easingin:easeOutElastic;" >En savoir plus</a>-->
    </div>
  </div>
</div>

<div class="container margin_60_35">
  <h1 class="main_title">
    <em></em>
    <%= t("common.the_villa") %> <span><%= t("villa.subtitle") %></span>
  </h1>
  <p class="lead styled">
    <%= t("villa.description.first") %><br>
    <%= t("villa.description.second") %><br><br>
    <%= t("villa.description.third") %><br><br>
  </p>
  <div class="row">
    <div class="col-sm-6">
      <div class="mosaic_container">
        <%= image_tag("villa/mosaic-1.jpg", class: "img-responsive add_bottom_30") %>
        <span class="caption_2"><%= t("villa.entertainent_area") %></span>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="col-xs-12">
        <div class="mosaic_container">
          <%= image_tag("villa/mosaic-2.jpg", class: "img-responsive add_bottom_30") %>
          <span class="caption_2"><%= t("villa.swimming_pool") %></span>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="mosaic_container">
          <%= image_tag("villa/mosaic-3.jpg", class: "img-responsive add_bottom_30") %>
          <span class="caption_2"><%= t("villa.boules_court") %></span>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="mosaic_container">
          <%= image_tag("villa/mosaic-4.jpg", class: "img-responsive add_bottom_30") %>
          <span class="caption_2"><%= t("villa.patio") %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<p class="lead styled">
  <%= t("villa.mosaics.first") %><br><br>
  <%= t("villa.mosaics.second") %><br><br>
  <%= t("villa.mosaics.third") %>
</p>

<%= render "villa/mosaics" %>

<div class="container margin_30">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h3><%= t("common.prices") %></h3>
      <table class="table table-striped">
        <tbody>
          <tr>
            <td><%= t("common.week_with_nights") %></td>
            <td>1900€ / <%= t("common.week") %></td>
          </tr>
          <tr>
            <td><%= t("common.weekend_with_nights") %></td>
            <td>750€ / <%= t("common.weekend") %></td>
          </tr>
          <tr>
            <td><%= t("common.additional_night") %></td>
            <td>280€ / <%= t("common.night") %></td>
          </tr>
        </tbody>
      </table>
      <p class="text-right">
        *<%= t("common.included_towels") %><br/>
        *<%= t("common.excluded_cleaning") %> 80€<br/>

        *<%= link_to t("common.tourist_tax"), "https://lacove.taxesejour.fr", target: "_blank" %> (<%= t("common.extra") %>)
      </p>
    </div>
  </div>
</div>

<%= render "villa/testimonials" %>
